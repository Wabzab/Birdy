<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Birdy.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/variant_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkPrimary</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Birdy.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <!-- <item name="android:background">@drawable/button_background</item>-->
    </style>
</resources>